{
  "name": "@soundcore/ui",
  "version": "0.0.1",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": "./dist",
    "./styles": "./dist/styles.css",
    "./tailwind": "./tailwind.config.js",
    "./assets": "./src/assets"
  },
  "files": [
    "./dist/**/*",
    "./tailwind.config.js",
    "./src/assets/**/*"
  ],
  "license": "MIT",
  "scripts": {
    "build": "yarn clean && tsup src/index.tsx --format esm,cjs --dts --external react && yarn build-tailwind && yarn build-storybook",
    "dev": "tsup src/index.tsx --format esm,cjs --dts --external react --watch & yarn tailwind & yarn storybook",
    "clean": "rimraf ./dist",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "tailwind": "tailwindcss -i ./src/styles/styles.css -o ./dist/styles.css --watch",
    "build-tailwind": "tailwindcss -i ./src/styles/styles.css -o ./dist/styles.css"
  },
  "peerDependencies": {
    "next": "^12.2.5"
  },
  "dependencies": {
    "next": "12.2.5"
  },
  "devDependencies": {
    "@babel/core": "^7.18.13",
    "@soundcore/tailwind": "*",
    "@storybook/addon-actions": "^6.5.10",
    "@storybook/addon-essentials": "^6.5.10",
    "@storybook/addon-interactions": "^6.5.10",
    "@storybook/addon-links": "^6.5.10",
    "@storybook/builder-webpack5": "^6.5.10",
    "@storybook/manager-webpack5": "^6.5.10",
    "@storybook/react": "^6.5.10",
    "@storybook/testing-library": "^0.0.13",
    "@types/react": "^17.0.37",
    "@types/react-dom": "^17.0.11",
    "babel-loader": "^8.2.5",
    "concurrently": "^7.2.2",
    "eslint": "^7.32.0",
    "eslint-config-custom": "*",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "^3.1.5",
    "tsconfig": "*",
    "tsup": "^6.1.3",
    "typescript": "^4.5.2"
  }
}
